extends layout

block content

  form.form-signin.text-center.col-sm-6.offset-sm-3(method='post', action='login')
    h1.h3.mb-3.font-weight-normal Film API
    label.sr-only(for='inputEmail') Email address
    input#inputEmail.form-control(type='email', name='email', placeholder='Email address', required='required', autofocus='autofocus')
    label.sr-only(for='inputPassword') Password
    input#inputPassword.form-control(type='password', name='password', placeholder='Password', required='required')
    .checkbox.mb-3
      label
        input(type='checkbox', name='remember', value='true')
        |  Remember me
    button.btn.btn-lg.btn-primary.btn-block(type='submit') Sign in
    a.btn.btn-lg.btn-primary.btn-block.btn-danger(href="/auth/google") Login with Google

    if error
      div.alert.alert-danger(role='alert') User not valid :(

    if logout
      div.alert.alert-success(role='alert') Logout completed!
